{
  "name": "post-and-share",
  "script": "scheduler.js",
  "instances": 1,
  "exec_mode": "cluster",
  "env": {
    "NODE_ENV": "production",
    "PORT": 3006
  },
  "env_development": {
    "NODE_ENV": "development",
    "PORT": 3006
  },
  "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
  "error_file": "./logs/err.log",
  "out_file": "./logs/out.log",
  "log_file": "./logs/combined.log",
  "time": true,
  "watch": false,
  "max_restarts": 10,
  "min_uptime": "10s",
  "max_memory_restart": "150M"
}
